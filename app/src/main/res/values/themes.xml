<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.FilemApp" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryDark">@color/primaryDarkColor</item>
        <item name="colorOnPrimary">@color/secondaryTextColor</item>
        <item name="colorSecondary">@color/secondaryColor</item>
        <item name="colorOnSecondary">@color/secondaryTextColor</item>
        <item name="colorSurface">@color/primaryColor</item>
        <item name="colorOnSurface">@color/primaryTextColor</item>
        <item name="android:colorBackground">@color/primaryColor</item>
        <item name="colorAccent">@color/primaryTextColor</item>
        <item name="colorControlActivated">@color/primaryTextColor</item>
        <!--text-->
        <item name="textAppearanceHeadline5">@style/FilemApp.TextAppearance.HeadlineFive</item>
        <item name="textAppearanceHeadline6">@style/FilemApp.TextAppearance.HeadlineSix</item>
        <item name="textAppearanceBody2">@style/FilemApp.TextAppearance.BodyTwo</item>
        <item name="android:spinnerDropDownItemStyle">@style/FilemApp.Component.itemDropDown</item>

    </style>
    <!-- Base application theme. -->

    <style name="FilemApp"/>

    <style name="FilemApp.TextAppearance"/>

    <style name="FilemApp.TextAppearance.HeadlineFive" parent="TextAppearance.MaterialComponents.Headline5">
        <item name="fontFamily">@font/fredoka</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/primaryTextColor</item>
    </style>

    <style name="FilemApp.TextAppearance.HeadlineSix" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="fontFamily">@font/fredoka</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/primaryTextColor</item>
    </style>

    <style name="FilemApp.TextAppearance.BodyTwo" parent="TextAppearance.MaterialComponents.Body2">
        <item name="fontFamily">@font/comforta</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/primaryTextColor</item>
    </style>

    <style name="FilemApp.TextAppearance.Button" parent="TextAppearance.MaterialComponents.Button">
        <item name="fontFamily">@font/comforta</item>
        <item name="textAllCaps">false</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="FilemApp.TextAppearance.Lable" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="fontFamily">@font/comforta</item>
        <item name="textAllCaps">false</item>
    </style>



    <style name="FilemApp.Component">
    </style>

    <style name="FilemApp.Component.ButtonPrimary" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">?attr/colorSecondary</item>
        <item name="android:background">@drawable/button_primary</item>
        <item name="android:textColor">@color/primaryTextColor</item>
        <item name="android:textAppearance">@style/FilemApp.TextAppearance.Button</item>
    </style>

    <style name="FilemApp.Component.ButtonSecondary" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">?attr/colorSecondary</item>
        <item name="android:background">@drawable/button_secondary</item>
        <item name="android:textColor">@color/primaryTextColor</item>
        <item name="android:textAppearance">@style/FilemApp.TextAppearance.Button</item>
    </style>

    <style name="FilemApp.Component.TextButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">@color/primaryTextColor</item>
        <item name="android:textAppearance">@style/FilemApp.TextAppearance.Button</item>
    </style>

    <style name="FilemApp.Component.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="android:textColorHint">#66FFFFFF</item>
        <item name="hintTextColor">#66FFFFFF</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="boxCornerRadiusTopStart">20dp</item>
        <item name="boxCornerRadiusTopEnd">20dp</item>
        <item name="boxCornerRadiusBottomStart">20dp</item>
        <item name="boxCornerRadiusBottomEnd">20dp</item>
        <item name="boxStrokeColor">@color/primaryTextColor</item>
        <item name="boxStrokeWidth">0dp</item>
        <item name="boxStrokeWidthFocused">0dp</item>
        <item name="android:textCursorDrawable">@null</item>
        <item name="hintTextAppearance">@style/FilemApp.TextAppearance.Lable</item>
        <item name="android:textAppearance">@style/FilemApp.TextAppearance.Lable</item>
    </style>

    <style name="FilemApp.Component.TextInputDropdown" parent="Widget.MaterialComponents.TextInputLayout.FilledBox.ExposedDropdownMenu">
        <item name="android:textColorHint">#66FFFFFF</item>
        <item name="hintTextColor">#66FFFFFF</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="boxCornerRadiusTopStart">20dp</item>
        <item name="boxCornerRadiusTopEnd">20dp</item>
        <item name="boxCornerRadiusBottomStart">20dp</item>
        <item name="boxCornerRadiusBottomEnd">20dp</item>
        <item name="boxStrokeWidth">0dp</item>
        <item name="boxStrokeWidthFocused">0dp</item>
        <item name="android:textCursorDrawable">@null</item>
        <item name="hintTextAppearance">@style/FilemApp.TextAppearance.Lable</item>
        <item name="android:textAppearance">@style/FilemApp.TextAppearance.Button</item>
    </style>


    <style name="FilemApp.Component.itemDropDown">
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="fontFamily">@font/comforta</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:gravity">center_vertical</item>
    </style>


    <style name="FilemApp.Component.DatePicker" parent="ThemeOverlay.MaterialComponents.MaterialCalendar">
        <item name="materialCalendarStyle">@style/FilemApp.Component.CalendarTheme</item>
        <item name="buttonBarNegativeButtonStyle">@style/FilemApp.Component.TextButton</item>
        <item name="buttonBarPositiveButtonStyle">@style/FilemApp.Component.TextButton</item>
    </style>

    <style name="FilemApp.Component.CalendarTheme" parent="Widget.MaterialComponents.MaterialCalendar">
        <item name="daySelectedStyle">@style/FilemApp.Component.DatePicker.DaySelected</item>
    </style>


    <style name="FilemApp.Component.DatePicker.DaySelected" parent="Widget.MaterialComponents.MaterialCalendar.Day.Selected">
        <item name="itemFillColor">@color/secondaryColor</item>
        <item name="itemTextColor">@color/primaryTextColor</item>
        <item name="itemStrokeWidth">2dp</item>
    </style>


</resources>



