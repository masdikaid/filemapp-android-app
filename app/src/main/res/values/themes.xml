<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MovupApp" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="colorAccent">@color/white</item>
        <!-- Customize your theme here. -->
        <item name="android:colorBackground">@color/black</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">@color/grey</item>
        <item name="android:textColorHighlight">@color/grey</item>
    </style>
    <!-- Base application theme. -->


    <!--begin master style-->
    <style name="Movup">
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">@color/grey</item>
    </style>
    <!--end master style-->


    <!--begin typograph style-->
        <style name="Movup.Text">
        </style>

        <style name="Movup.Text.Heading">
            <item name="fontFamily">@font/fredoka</item>
        </style>

        <style name="Movup.Text.Heading.Primary">
            <item name="android:textSize">35sp</item>
        </style>

        <style name="Movup.Text.Heading.Secondary">
            <item name="android:textSize">23sp</item>
        </style>

        <style name="Movup.Text.Heading.Title">
            <item name="android:textSize">20sp</item>
        </style>

        <style name="Movup.Text.Heading.Label">
            <item name="android:textSize">14sp</item>
        </style>

        <style name="Movup.Text.Description">
            <item name="fontFamily">@font/comforta</item>
            <item name="android:textSize">14sp</item>
        </style>

        <style name="Movup.Text.Action">
            <item name="fontFamily">@font/comforta</item>
            <item name="android:textSize">15sp</item>
        </style>
    <!--end typograph style-->


    <!--begin component style-->
        <style name="Movup.Component">
            <item name="height">45dp</item>
            <item name="fontFamily">@font/comforta</item>
        </style>

        <style name="Movup.Component.Button">
        </style>

        <style name="Movup.Component.Button.Primary">
            <item name="android:background">@drawable/button_primary</item>
        </style>

        <style name="Movup.Component.Button.Secondary">
            <item name="height">20dp</item>
            <item name="android:background">@drawable/button_secondary</item>
        </style>


        <style name="Movup.Component.Form">
        </style>

        <style name="Movup.Component.Form.InputLable">
            <item name="android:textSize">15sp</item>
            <item name="fontFamily">@font/fredoka</item>
        </style>

        <style name="Movup.Component.Form.EditText">
            <item name="android:textSize">15sp</item>
            <item name="android:paddingTop">10dp</item>
            <item name="android:paddingBottom">10dp</item>
            <item name="android:height">48dp</item>
            <item name="android:layout_height">48dp</item>
            <item name="android:minHeight">48dp</item>
            <item name="android:background">@drawable/edit_text</item>
        </style>

        <style name="Movup.Component.Form.Spinner">
            <item name="android:textSize">15sp</item>
            <item name="android:height">48dp</item>
            <item name="android:layout_height">48dp</item>
            <item name="android:background">@drawable/edit_text</item>
        </style>
    <!--end component style-->


    <!--begin onboarding style-->
    <style name="Movup.OnBoarding">
    </style>
    <!--end onboarding style-->


    <!--begin signin style-->
    <style name="Movup.SignIn">
    </style>
    <!--end signin style-->

</resources>