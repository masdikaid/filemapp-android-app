<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MovupApp" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="colorAccent">@color/white</item>
        <!-- Customize your theme here. -->
        <item name="android:colorBackground">@color/black</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">@color/grey</item>
        <item name="android:textColorHighlight">@color/grey</item>
    </style>

    <!--On Boarding Custom Style-->
    <style name="Movup">
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">@color/grey</item>
    </style>



    <!--begin onboarding style-->
    <style name="Movup.OnBoarding">
    </style>

    <style name="Movup.OnBoarding.Heading">
        <item name="fontFamily">@font/fredoka</item>
        <item name="android:textSize">23sp</item>
    </style>

    <style name="Movup.OnBoarding.Description">
        <item name="fontFamily">@font/comforta</item>
        <item name="android:textSize">14sp</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

    <style name="Movup.OnBoarding.ButtonPrimary">
        <item name="height">20dp</item>
        <item name="fontFamily">@font/comforta</item>
        <item name="android:background">@drawable/button_primary</item>
    </style>

    <style name="Movup.OnBoarding.ButtonSecondary">
        <item name="height">20dp</item>
        <item name="fontFamily">@font/comforta</item>
        <item name="android:background">@drawable/button_secondary</item>
    </style>
    <!--end onboarding style-->


    <!--begin onboarding style-->
    <style name="Movup.SignIn">
    </style>

    <style name="Movup.SignIn.AppName">
        <item name="android:textSize">23sp</item>
        <item name="fontFamily">@font/fredoka</item>
    </style>

    <style name="Movup.SignIn.Title">
        <item name="android:textSize">20sp</item>
        <item name="fontFamily">@font/fredoka</item>
    </style>

    <style name="Movup.SignIn.UsernameLable">
        <item name="android:textSize">15sp</item>
        <item name="fontFamily">@font/fredoka</item>
    </style>

    <style name="Movup.SignIn.RegisterAction">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="fontFamily">@font/comforta</item>
    </style>

    <style name="Movup.SignIn.EditText">
        <item name="android:textSize">15sp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:height">48dp</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:background">@drawable/edit_text</item>
    </style>
    <!--end onboarding style-->

</resources>